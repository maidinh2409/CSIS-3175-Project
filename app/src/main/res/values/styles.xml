<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button styles -->
    <style name="ButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/colorSurface</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="PrimaryButtonStyle" parent="ButtonStyle">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="SecondaryButtonStyle" parent="ButtonStyle">
        <item name="android:backgroundTint">#6750A4</item>
        <item name="android:textColor">@color/colorSurface</item>
        <item name="android:textSize">18sp</item>
        <item name="strokeColor">@color/colorTextPrimary</item>
    </style>

    <style name="AccentButtonStyle" parent="ButtonStyle">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <!-- Text Input styles -->
    <style name="TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#80FFFFFF</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <!-- Card styles -->
    <style name="CardViewStyle" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="AppBarStyle" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/colorSecondary</item>
    </style>

</resources>