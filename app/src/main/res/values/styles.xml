<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button styles -->
    <style name="ButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/colorSurface</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="PrimaryButtonStyle" parent="ButtonStyle">
        <item name="backgroundTint">#99F5F8FA</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="strokeColor">@color/colorTextPrimary</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="SecondaryButtonStyle" parent="ButtonStyle">
        <item name="android:backgroundTint">#6750A4</item>
        <item name="android:textColor">@color/colorSurface</item>
        <item name="strokeColor">@color/colorTextPrimary</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="TertiaryButtonStyle" parent="ButtonStyle">
        <item name="backgroundTint">@color/alphaBlack</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="DestructiveButtonStyle" parent="ButtonStyle">
        <item name="android:backgroundTint">#E53935</item>
        <item name="android:textColor">@color/colorSurface</item>
        <item name="android:textSize">18sp</item>
        <item name="strokeColor">#000000</item>
    </style>

    <style name="AccentButtonStyle" parent="ButtonStyle">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <!-- Text Input styles -->
    <style name="TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#80FFFFFF</item>
        <item name="hintTextAppearance">@style/TextAppearance.Material3.LabelSmall</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/colorTextPrimary</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="hintTextColor">@color/colorTextPrimary</item>

    </style>

    <!-- Card styles -->
    <style name="CardViewStyle" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <item name="cardCornerRadius">50dp</item>
        <item name="contentPaddingTop">6dp</item>
        <item name="contentPaddingBottom">6dp</item>
        <item name="contentPaddingRight">12dp</item>
        <item name="contentPaddingLeft">12dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/alphaBlack</item>
    </style>

    <style name="SecondaryCardViewStyle">
        <item name="android:background">@color/alphaWhite</item>
        <item name="cardCornerRadius">50dp</item>
        <item name="contentPaddingTop">6dp</item>
        <item name="contentPaddingBottom">6dp</item>
        <item name="contentPaddingRight">12dp</item>
        <item name="contentPaddingLeft">12dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/alphaBlack</item>
    </style>

    <style name="HeadingTextStyle" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h2" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="h3" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppBarStyle" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/colorSecondary</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="SearchBarStyle" parent="Widget.Material3.SearchBar.Outlined">
        <item name="backgroundTint">#99F5F8FA</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">22sp</item>
        <item name="strokeColor">@color/colorTextPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="shapeAppearanceOverlay">@style/Widget.Material3.SearchBar.Outlined</item>
    </style>

    <style name="PrimaryIconButtonStyle" parent="Widget.Material3.Button.IconButton.Outlined">

    </style>

    <style name="AcceptButtonStyle" parent="Widget.Material3.Button.ElevatedButton">
        <item name="backgroundTint">#4CAF50</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/colorTextPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="DeclineButtonStyle" parent="Widget.Material3.Button.ElevatedButton">
        <item name="backgroundTint">#E53935</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/colorTextPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="SecondaryIconButtonStyle" parent="Widget.Material3.Button.IconButton">
        <item name="backgroundTint">@color/black</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/colorTextPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Material3.TabLayout">
        <item name="tabSelectedTextColor">@color/colorSecondary</item>
        <item name="tabTextColor">@color/black</item>
        <item name="android:background"></item>
        <item name="tabIndicatorColor">@color/colorSecondary</item>
    </style>

</resources>