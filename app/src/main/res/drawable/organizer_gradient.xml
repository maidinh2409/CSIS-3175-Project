<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base background color: #ffda99 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFDA99" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:centerX="90%"
                android:centerY="13%"
